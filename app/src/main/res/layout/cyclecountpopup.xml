<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cyclecountpopupclose"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Back"
            android:background="@color/colorRedBackgrnd"
            android:gravity="center"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cyclecountpopupprodname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorOutboundPopUpText"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cyclecountpopupsku"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorOutboundPopUpText"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/cyclecountpopupqty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_textview"
            android:hint="Enter Quantity #"
            android:inputType="number"
            android:paddingLeft="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/cyclecountpopupcmnt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_textview"
            android:hint="Enter Comment #"
            android:inputType="number"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cyclecountpopupsubmit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/colorBlueBackgrnd"
            android:text="Confirm" />
    </LinearLayout>


</LinearLayout>