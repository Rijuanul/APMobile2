<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorAccent"
            android:id="@+id/salesvariantprodname"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"

        android:orientation="horizontal">

        <ExpandableListView
            android:id="@+id/salesvariantitem"
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:background="@drawable/inboundheadersubitem_layout_border_secondcolumn"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Search"
            android:id="@+id/searchsalesvaprodbtn"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:fontFamily="sans-serif"
            android:id="@+id/salesvariantprodatsqty"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:fontFamily="sans-serif"
            android:id="@+id/salesvariantprodprice"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/salesvarprodqty"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_textview"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/salesvarprodaddtoorder"
            style="@android:style/Widget.Button.Small"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Add to Order"
            android:fontFamily="sans-serif"/>
    </LinearLayout>

</LinearLayout>
