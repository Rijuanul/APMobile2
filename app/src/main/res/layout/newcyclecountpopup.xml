<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/newcyclecountbackbtnlayout"
        android:orientation="horizontal">

        <Button
            android:id="@+id/newcyclecountpopupclose"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Back"
            android:background="@color/colorRedBackgrnd"
            android:gravity="center"
            />
    </LinearLayout>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/newcyclecountbackbtnlayout"
       android:id="@+id/newcyclecountscrollview">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:gravity="center"
               android:orientation="horizontal">

               <LinearLayout
                   android:layout_width="150dp"
                   android:layout_height="30dp"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:fontFamily="sans-serif"
                       android:paddingLeft="15dp"
                       android:text="New Cycle Count"
                       android:textColor="@color/colorOutboundPopUpText"
                       android:textSize="14sp"
                       android:textStyle="bold" />
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="80dp"
                   android:layout_height="30dp"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="90dp"
                       android:layout_height="match_parent"
                       android:textColor="@color/colorOutboundPopUpText"
                       android:text="Date"
                       android:paddingLeft="5dp"
                       android:textSize="12sp"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="200dp"
                   android:layout_height="40dp"
                   android:orientation="vertical">

                   <EditText
                       android:id="@+id/newcyclecountdate"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:inputType="date"
                       android:paddingLeft="5dp"/>
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="80dp"
                   android:layout_height="30dp"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="90dp"
                       android:layout_height="match_parent"
                       android:textColor="@color/colorOutboundPopUpText"
                       android:text="Name"
                       android:paddingLeft="5dp"
                       android:textSize="12sp"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="200dp"
                   android:layout_height="40dp"
                   android:orientation="vertical">

                   <EditText
                       android:id="@+id/newcyclecountname"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@drawable/rounded_textview"
                       android:hint="Enter Name #"
                       android:inputType="text"
                       android:paddingLeft="5dp" />
               </LinearLayout>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="80dp"
                   android:layout_height="30dp"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="90dp"
                       android:layout_height="match_parent"
                       android:textColor="@color/colorOutboundPopUpText"
                       android:text="Picker"
                       android:paddingLeft="5dp"
                       android:textSize="12sp"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="200dp"
                   android:layout_height="40dp"
                   android:orientation="vertical">
                   <Spinner
                       android:id="@+id/newcyclecountpickerdrpdwn"
                       style="@android:style/Widget.Spinner.DropDown"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:dropDownWidth="match_parent"
                       android:pointerIcon="hand"
                       android:popupBackground="@color/colorAdjustmentPickLocationBack"
                       android:spinnerMode="dropdown"
                       android:textAlignment="center"
                       app:popupTheme="@style/Base.Animation.AppCompat.DropDownUp" />
               </LinearLayout>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="80dp"
                   android:layout_height="30dp"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="90dp"
                       android:layout_height="match_parent"
                       android:textColor="@color/colorOutboundPopUpText"
                       android:text="Warehouse"
                       android:paddingLeft="5dp"
                       android:textSize="12sp"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="200dp"
                   android:layout_height="40dp"
                   android:orientation="vertical">
                   <Spinner
                       android:id="@+id/newcyclecountwarehousedrpdwn"
                       style="@android:style/Widget.Spinner"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:dropDownWidth="match_parent"
                       android:pointerIcon="hand"
                       android:popupBackground="@color/colorAdjustmentPickLocationBack"
                       android:spinnerMode="dropdown"
                       android:textAlignment="center"
                       app:popupTheme="@style/Base.Animation.AppCompat.DropDownUp" />
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:id="@+id/newcyclecountpicloclayout"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="80dp"
                   android:layout_height="30dp"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="90dp"
                       android:layout_height="match_parent"
                       android:textColor="@color/colorOutboundPopUpText"
                       android:text="Pic Loc"
                       android:paddingLeft="5dp"
                       android:textSize="12sp"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="200dp"
                   android:layout_height="40dp"
                   android:orientation="vertical">
                   <Spinner
                       android:id="@+id/newcyclecountpiclocdrpdwn"
                       style="@android:style/Widget.Spinner"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:dropDownWidth="match_parent"
                       android:pointerIcon="hand"
                       android:popupBackground="@color/colorAdjustmentPickLocationBack"
                       android:spinnerMode="dropdown"
                       android:textAlignment="center"
                       app:popupTheme="@style/Base.Animation.AppCompat.DropDownUp" />
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:id="@+id/newcyclecountvendorlayout"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="80dp"
                   android:layout_height="30dp"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="90dp"
                       android:layout_height="match_parent"
                       android:textColor="@color/colorOutboundPopUpText"
                       android:text="Vendor"
                       android:paddingLeft="5dp"
                       android:textSize="12sp"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="200dp"
                   android:layout_height="40dp"
                   android:orientation="vertical">
                   <Spinner
                       android:id="@+id/newcyclecountvendordrpdwn"
                       style="@android:style/Widget.Spinner"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:dropDownWidth="match_parent"
                       android:pointerIcon="hand"
                       android:popupBackground="@color/colorAdjustmentPickLocationBack"
                       android:spinnerMode="dropdown"
                       android:textAlignment="center"
                       app:popupTheme="@style/Base.Animation.AppCompat.DropDownUp" />
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:id="@+id/newcyclecountprdctglayout"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="80dp"
                   android:layout_height="50dp"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="90dp"
                       android:layout_height="match_parent"
                       android:textColor="@color/colorOutboundPopUpText"
                       android:text="Product Category"
                       android:paddingLeft="5dp"
                       android:textSize="12sp"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="200dp"
                   android:layout_height="40dp"
                   android:orientation="vertical">
                   <Spinner
                       android:id="@+id/newcyclecountproductctgdrpdwn"
                       style="@android:style/Widget.Spinner"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:dropDownWidth="match_parent"
                       android:pointerIcon="hand"
                       android:popupBackground="@color/colorAdjustmentPickLocationBack"
                       android:spinnerMode="dropdown"
                       android:textAlignment="center"
                       app:popupTheme="@style/Base.Animation.AppCompat.DropDownUp" />
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:id="@+id/newcyclecountcustfldlayout"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="80dp"
                   android:layout_height="50dp"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="90dp"
                       android:layout_height="match_parent"
                       android:textColor="@color/colorOutboundPopUpText"
                       android:text="Custom Field"
                       android:paddingLeft="5dp"
                       android:textSize="12sp"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="200dp"
                   android:layout_height="40dp"
                   android:orientation="vertical">
                   <Spinner
                       android:id="@+id/newcyclecountcustomflddrpdwn"
                       style="@android:style/Widget.Spinner"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:dropDownWidth="match_parent"
                       android:pointerIcon="hand"
                       android:popupBackground="@color/colorAdjustmentPickLocationBack"
                       android:spinnerMode="dropdown"
                       android:textAlignment="center"
                       app:popupTheme="@style/Base.Animation.AppCompat.DropDownUp" />
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="200dp"
               android:layout_height="60dp"
               android:layout_gravity="center"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/newcyclecountpopupnext"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:background="@color/colorBlueBackgrnd"
                   android:text="Next" />
           </LinearLayout>
       </LinearLayout>
   </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newcyclecountscrollview"
        android:id="@+id/newcyclecountitemscrollview">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Item List"
                android:textColor="@color/colorOutboundPopUpText"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/newcyclecountitemfilter"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rounded_textview"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Filter #"
                android:inputType="text"
                android:paddingLeft="5dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/nextcyclecountloading"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/newcyclecountitemlistview"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:footerDividersEnabled="true"
                android:nestedScrollingEnabled="true"
                android:scrollbars="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <Button
                    android:id="@+id/newcyclecountitemsavebtn"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlueBackgrnd"
                    android:text="Save Cycle Count" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/newcyclecountitemstartbtn"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlueBackgrnd"
                    android:text="Start Cycle Count" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>