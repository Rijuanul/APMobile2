<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/outboundpopupclose"
            style="@android:style/Widget.Button.Small"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Back"
            android:background="@color/colorRedBackgrnd"
            android:fontFamily="sans-serif"
            android:gravity="center"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/outboundpopupheadding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorOutboundPopUpText"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/outboundpopuppiclock"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/colorOutboundPopUpText"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/outboundpopupproductname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="@color/colorOutboundPopUpText"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/outboundpopupserial"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_textview"
            android:hint="Enter Serial #"
            android:inputType="text"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/outboundpopuplot"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_textview"
            android:hint="Enter Lot #"
            android:inputType="text"
            android:paddingLeft="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/outboundpopupqty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_textview"
            android:hint="Enter Quantity #"
            android:inputType="number"
            android:paddingLeft="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/outboundpopupsubmit"
            style="@android:style/Widget.Button.Small"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorBlueBackgrnd"
            android:fontFamily="sans-serif"
            android:text="Confirm" />
    </LinearLayout>


</LinearLayout>